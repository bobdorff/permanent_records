<%= form_for @record, html: {class: "selected-record"} do |f| %>
<%= f.hidden_field(:thumb, value: result.thumb) %>
<%= f.hidden_field(:title, value: result.title) %>
<%= f.hidden_field(:label, value: result.label.first) %>
<%= f.hidden_field(:catno, value: result.catno)%>
<%= f.hidden_field(:year,  value: result.year)%>
<%= f.hidden_field(:release, value: result.release)%>
<%= f.hidden_field(:artist, value: result.artist)%>
<%= f.submit("I'm listening to this!", class: "btn btn-success add-record") %>
<% end %>
