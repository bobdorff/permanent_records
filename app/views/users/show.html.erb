<% provide(:title, @user.username) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
			<h1>
				<%= image_tag @user.avatar.url(:medium) %>
        <br>
				<%= @user.username %>
			</h1>
      <% if @user == current_user %>
        <p>What are you listening to?</p>
        <%= render "records/record_search"%>
      <% end %>
		</section>
	</aside>
</div>
