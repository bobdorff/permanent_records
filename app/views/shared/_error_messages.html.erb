<% if @user.errors.any? %>
	<div id="error_explanation">
    <div class="alert alert-danger">
    	Uh-oh, it looks like you made <%= pluralize(@user.errors.count, "mistake") %>.
    </div>
  	<ul>
  	<% @user.errors.full_messages.each do |msg| %>
  		<li><%= msg %></li>
  	<% end %>
  	</ul> 
 	</div>
<% end %>